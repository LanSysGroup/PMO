    <!-- Print -->
    <Style TargetType="MapPrinting:CenteredContentControl">
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MapPrinting:CenteredContentControl">
                    <ContentPresenter Cursor="{TemplateBinding Cursor}" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <MapPrinting:ToVisibilityConverter x:Key="toVisibility" />

    <ControlTemplate x:Key="PageSymbolTemplate">
        <Path x:Name="Element"
		      Stroke="Blue"
		      StrokeStartLineCap="Round"
		      StrokeThickness="2.0"
		      StrokeLineJoin="Round"
		      StrokeEndLineCap="Round"
		      Fill="#050000E0"
		     >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="Unselected" />
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Element"
							                              Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)">
                                <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#152000E0" />
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Element"
							                              Storyboard.TargetProperty="(Path.Stroke).(SolidColorBrush.Color)">
                                <DiscreteColorKeyFrame KeyTime="0:0:0" Value="Cyan" />
                            </ColorAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Element"
							                               Storyboard.TargetProperty="(Path.StrokeThickness)">
                                <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="4.0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Path>
    </ControlTemplate>

    <ControlTemplate x:Key="TextSymbolTemplate">
        <Grid>
            <MapPrinting:CenteredContentControl x:Name="Element" Content="{Binding Attributes[Page]}" FontSize="{Binding Symbol.FontSize}" Foreground="{Binding Symbol.Foreground}" />
        </Grid>
    </ControlTemplate>

    <Style TargetType="MapPrinting:MapPrinter">
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint=".7,1" StartPoint=".7,0">
                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                    <GradientStop Color="#FFF9FAFB" Offset="0.375"/>
                    <GradientStop Color="#FFE5E8EB" Offset="0.625"/>
                    <GradientStop Color="#FFCBD1D7" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA3AEB9" Offset="0"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="#FF617584" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Height" Value="1050" />
        <Setter Property="Width" Value="750" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MapPrinting:MapPrinter">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" Margin="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Background="{TemplateBinding Background}" Grid.Row="0" Grid.ColumnSpan="2">
                                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Center" FontSize="12" 
									           Visibility="{Binding Title, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource toVisibility}}" />
                                </StackPanel>

                                <!-- Body-->
                                <Grid Grid.Row="1">
                                    <!-- Map-->
                                    <esri:Map x:Name="PrintMap" IsLogoVisible="False"
									          MapPrinting:SurrogateBinder.OverviewMapPrinter="{Binding RelativeSource={RelativeSource TemplatedParent}}"
									          MapPrinting:CloneMap.Map="{TemplateBinding Map}">
                                        <MapPrinting:PrintOverviewLayer>
                                            <MapPrinting:PrintOverviewLayer.TextSymbol>
                                                <esri:TextSymbol ControlTemplate="{StaticResource TextSymbolTemplate}" Foreground="#800000FF" FontSize="72" />
                                            </MapPrinting:PrintOverviewLayer.TextSymbol>
                                            <MapPrinting:PrintOverviewLayer.PageFillSymbol>
                                                <esri:SimpleFillSymbol ControlTemplate="{StaticResource PageSymbolTemplate}" />
                                            </MapPrinting:PrintOverviewLayer.PageFillSymbol>
                                        </MapPrinting:PrintOverviewLayer>
                                    </esri:Map>

                                    <!-- Scale line -->
                                    <esri:ScaleLine Map="{Binding ElementName=PrintMap}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,10" Grid.Row="1"/>
                                </Grid>

                                <!-- Footer -->
                                <Grid Background="{TemplateBinding Background}" Grid.Row="2" FlowDirection="LeftToRight">
                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
									           Text="{Binding Now, RelativeSource={RelativeSource TemplatedParent}, StringFormat='Printed {0:d} '}" />
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2"
									           Text="{Binding Scale, RelativeSource={RelativeSource TemplatedParent}, StringFormat='1 : {0:F0} '}" />
                                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock Text="{Binding CurrentPage, RelativeSource={RelativeSource TemplatedParent}, StringFormat='Page {0} '}" />
                                        <TextBlock Text="{Binding PageCount, RelativeSource={RelativeSource TemplatedParent}, StringFormat='/ {0}'}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <MapPrinting:LogConverter x:Key="logConverter" />

    <Style TargetType="MapPrinting:MapPrinterDialog">
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint=".7,1" StartPoint=".7,0">
                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                    <GradientStop Color="#FFF9FAFB" Offset="0.375"/>
                    <GradientStop Color="#FFE5E8EB" Offset="0.625"/>
                    <GradientStop Color="#FFCBD1D7" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA3AEB9" Offset="0"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="#FF617584" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Padding" Value="0" />

        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="MapPrinting:MapPrinterDialog">

                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2"
							Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!--MapPrinter preview-->
                                <RowDefinition />
                                <!--Separator-->
                                <RowDefinition  Height="Auto"/>
                                <!--Print parameters-->
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>


                            <!--Viewbox allows the whole mapprinter to be rendered in the allocate size-->
                            <Viewbox>
                                <ContentPresenter Content="{TemplateBinding MapPrinter}" MinHeight="200" />
                            </Viewbox>

                            <!-- Instructions for defining print extent-->
                            <TextBlock x:Name="defineextentInstructions" Text="لطفا محدوده چاپ را در اين پنجره ترسيم کنيد" IsHitTestVisible="False"
									   TextWrapping="Wrap" FontSize="11" Visibility="Collapsed" Margin="10" VerticalAlignment="Center" TextAlignment="Center"
									   />

                            <!-- Separator -->
                            <Border  HorizontalAlignment="Stretch" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Grid.Row="1" />

                            <!--Print parameters-->
                            <Grid Grid.Row="2" Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Visibility="Collapsed">
                                    <TextBlock VerticalAlignment="Center" Text="Rotate Map : " />
                                    <CheckBox IsChecked="{Binding RotateMap, Mode=TwoWay}" VerticalAlignment="Center"  />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Visibility="Collapsed">
                                    <TextBlock Text="{Binding CurrentPage, StringFormat=Page \{0\}}"/>
                                    <TextBlock Text="{Binding PageCount, StringFormat='/\{0\}  '}" />
                                </StackPanel>
                                <Slider Value="{Binding  CurrentPage,  Mode=TwoWay}" Visibility="Collapsed"
										Minimum="1" Maximum="{Binding PageCount}"
										SmallChange="1" Width="150" Grid.Row="0" Grid.Column="1" />

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Visibility="Collapsed">
                                    <TextBlock VerticalAlignment="Center" Text="Print to scale: "/>
                                    <CheckBox IsChecked="{Binding  IsScaleFixed, Mode=TwoWay}" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding  Scale, Mode=TwoWay, StringFormat=\{0:F0\}, ValidatesOnExceptions=True}" Width="70" Height="20" />
                                </StackPanel>

                                <Slider Value="{Binding Scale, Converter={StaticResource logConverter}, Mode=TwoWay}" Minimum="3" Maximum="8" Width="150"
										SmallChange="0.1" LargeChange="1" IsEnabled="{Binding IsScaleFixed}" Visibility="Collapsed"
										VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="2" FlowDirection="RightToLeft">
                                    <TextBlock VerticalAlignment="Center" Text="عنوان: " FontSize="12" Margin="10 0 0 0"/>
                                    <TextBox Text="{Binding Title, Mode=TwoWay}" FontSize="12"
											 Height="25" Width="130" VerticalAlignment="Center"/>
                                    <!--<TextBox Text="عنوان نقشه" FontSize="12"
											 Height="25" Width="130" VerticalAlignment="Center"/>-->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Center" FlowDirection="RightToLeft" Margin="10 0 0 0">
                                        <Button Command="{Binding DefineExtentCommand}" CommandParameter="{Binding ElementName=defineextentInstructions}" Margin="5,0,5,0"
											ToolTipService.ToolTip="مشخص کردن محدوده براي چاپ" >
                                            <Image Source="/MapPrintingControls;component/Images/i_defineextent.png" Stretch="Fill" />
                                        </Button>
                                        <Button Command="{Binding PrintCommand}" CommandParameter="{Binding Text, ElementName=txtPages}" Margin="5,0,5,0"
											ToolTipService.ToolTip="چاپ نقشه">
                                            <Image Source="/MapPrintingControls;component/Images/i_print.png" Stretch="Fill" />
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Bottom" Visibility="Collapsed">
                                    <TextBlock Text="Pages to print: " VerticalAlignment="Center" />
                                    <TextBox x:Name="txtPages" Text="" Height="20" Width="80" ToolTipService.ToolTip="Pages to print (e.g: 1,2,5-9)" VerticalAlignment="Center"/>
                                </StackPanel>



                            </Grid>

                            <!--Busy indicator over parameters and mapprinter preview-->
                            <MapPrinting:MapPrinterIndicator MapPrinter="{TemplateBinding MapPrinter}" Grid.RowSpan="3" />

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="MapPrinting:MapPrinterIndicator">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="IsHitTestVisible" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MapPrinting:MapPrinterIndicator">

                    <toolkit:BusyIndicator IsBusy="{Binding MapPrinter.IsPrinting, RelativeSource={RelativeSource TemplatedParent}}" Foreground="{TemplateBinding Foreground}" >
                        <i:Interaction.Triggers>
                            <!--cancel the print by left clicking or key down the busy indicator -->
                            <i:EventTrigger EventName="KeyDown">
                                <i:InvokeCommandAction Command="{Binding MapPrinter.CancelPrintCommand, RelativeSource={RelativeSource TemplatedParent}}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding MapPrinter.CancelPrintCommand, RelativeSource={RelativeSource TemplatedParent}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <toolkit:BusyIndicator.BusyContent>
                            <Grid>
                                <TextBlock Text="Print canceled" Visibility="{Binding MapPrinter.IsCancelingPrint, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource toVisibility}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                                <StackPanel Orientation="Horizontal" Visibility="{Binding MapPrinter.IsCancelingPrint, RelativeSource={RelativeSource TemplatedParent}, ConverterParameter=Reverse, Converter={StaticResource toVisibility}}">
                                    <TextBlock Text="{Binding MapPrinter.CurrentPage, RelativeSource={RelativeSource TemplatedParent}, StringFormat=Printing page \{0\}}"/>
                                    <TextBlock Text="{Binding MapPrinter.PageCount, RelativeSource={RelativeSource TemplatedParent}, StringFormat=/\{0\}}"/>
                                </StackPanel>
                            </Grid>
                        </toolkit:BusyIndicator.BusyContent>

                    </toolkit:BusyIndicator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
