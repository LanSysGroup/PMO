<UserControl x:Class="LanSysWebGIS.UserControls.RibbonBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="1000"
    FlowDirection="RightToLeft"
    FontFamily="Tahoma">

    <dxb:BarManager Name="barManager">
        <dxb:BarManager.Items>
            <dxb:BarButtonItem Name="bZoomIn" Content="بزرگ نمایی" 
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/zoom_in_magnifier.png" 
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/zoom_in_magnifier.png"  
                               Description="بزرگ نمایی بر روی نقشه"
                               Hint="بزرگ نمایی بر روی نقشه"
                               ItemClick="bZoomIn_ItemClick"
                               />

            <dxb:BarButtonItem Name="bZoomOut" Content="کوچک نمایی" 
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/zoom_out_magnifier.png" 
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/zoom_out_magnifier.png"  
                               Description="کوچک نمایی بر روی نقشه"
                               Hint="کوچک نمایی بر روی نقشه"
                               ItemClick="bZoomOut_ItemClick"
                               />

            <dxb:BarButtonItem Name="bInitialExtent" Content="نمای اولیه" 
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/home.png" 
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/home.png"  
                               Description="نمای اولیه نقشه"
                               Hint="نمای اولیه نقشه"
                               ItemClick="bInitialExtent_ItemClick"
                               />

            <dxb:BarButtonItem Name="bFullExtent" Content="نمای کامل" 
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/world_globe.png" 
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/world_globe.png"  
                               Description="نمای کامل نقشه"
                               Hint="نمای کامل نقشه"
                               ItemClick="bFullExtent_ItemClick" />

            <dxb:BarEditItem Name="eMapScale" EditWidth="100" Content="مقیاس" Hint="تعیین مقیاس نقشه" 
                             EditValueChanged="eMapScale_EditValueChanged">
                <dxb:BarEditItem.EditSettings>
                    <dxe:ComboBoxEditSettings Name="cmbScale" PopupMaxHeight="80" IsTextEditable="False">
                        <dxe:ComboBoxEditSettings.Items>
                            <dxe:ComboBoxEditItem Content="1:4000" Tag="4000"/>
                            <dxe:ComboBoxEditItem Content="1:8000" Tag="8000"/>
                            <dxe:ComboBoxEditItem Content="1:16000" Tag="16000"/>
                            <dxe:ComboBoxEditItem Content="1:32000" Tag="32000"/>
                            <dxe:ComboBoxEditItem Content="1:64000" Tag="64000"/>
                            <dxe:ComboBoxEditItem Content="1:125000" Tag="125000"/>
                            <dxe:ComboBoxEditItem Content="1:250000" Tag="250000"/>
                            <dxe:ComboBoxEditItem Content="1:500000" Tag="500000"/>
                            <dxe:ComboBoxEditItem Content="1:1000000" Tag="1000000"/>
                            <dxe:ComboBoxEditItem Content="1:2000000" Tag="2000000"/>
                            <dxe:ComboBoxEditItem Content="1:4000000" Tag="4000000"/>
                            <dxe:ComboBoxEditItem Content="1:8000000" Tag="8000000"/>
                            <dxe:ComboBoxEditItem Content="1:12000000" Tag="12000000"/>
                        </dxe:ComboBoxEditSettings.Items>
                    </dxe:ComboBoxEditSettings>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarEditItem Name="eUserMapScale" EditWidth="80" Content="عدد مقیاس" Hint="مقیاس" >
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings />
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarEditItem Name="eBookmark" EditWidth="120" Content="بوک مارک" Hint="عوارض بوک مارک شده">
                <dxb:BarEditItem.EditSettings>
                    <dxe:ComboBoxEditSettings PopupMaxHeight="200" IsTextEditable="True"/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarCheckItem Name="bAddToBookmark" Content="بوک مارک"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/favorite.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/favorite.png"
                               Description="اضافه کردن به لیست بوک مارک ها"
                               Hint="اضافه کردن به لیست بوک مارک ها"
                               CheckedChanged="bAddToBookmark_ItemClick"
                               />

            <dxb:BarButtonItem Name="bPreviousView" Content="نمای قبلی"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/left_arrow.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/left_arrow.png"
                               Description="رفتن به نمای قبلی"
                               Hint="رفتن به نمای قبلی"
                               IsEnabled="False"
                               ItemClick="bPreviousView_ItemClick"
                               />

            <dxb:BarButtonItem Name="bNextView" Content="نمای بعدی"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/right_arrow.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/right_arrow.png"
                               Description="رفتن به نمای بعدی"
                               Hint="رفتن به نمای بعدی"
                               IsEnabled="False"
                               ItemClick="bNextView_ItemClick"
                               />

            <dxr:BarButtonGroup Name="bgViews" Content="نمای بعدی و قبلی">
                <dxr:BarButtonGroup.ItemLinks>
                    <dxb:BarButtonItemLink BarItemName="bNextView" />
                    <dxb:BarButtonItemLink BarItemName="bPreviousView" />
                </dxr:BarButtonGroup.ItemLinks>
            </dxr:BarButtonGroup>

            <dxb:BarEditItem Name="eGotoX" EditWidth="100" Content="Y:" Hint="رفتن به مختصات Y">
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings />
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarEditItem Name="eGotoY" EditWidth="100" Content="X:" Hint="رفتن به مختصات X">
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
			
			<dxb:BarEditItem Name="eGotoZone" EditWidth="100" Content="زون:" Hint="زون">
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxr:BarButtonGroup Name="bgGotoXY" Content="X و Y">
                <dxr:BarButtonGroup.ItemLinks>
                    <dxb:BarItemLink BarItemName="eGotoY"/>
                    <dxb:BarItemLink BarItemName="eGotoX"/>
                </dxr:BarButtonGroup.ItemLinks>
            </dxr:BarButtonGroup>

            <dxb:BarButtonItem Name="bGoto" Content="برو"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/promotion.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/promotion.png"
                               Description="رفتن به مختصات تعیین شده"
                               Hint="رفتن به مختصات تعیین شده"
                               ItemClick="bGoto_ItemClick"
                               />

            <dxb:BarButtonItem Name="bZoomTo" Content="زوم کن"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/search_magnifier.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/search_magnifier.png"
                               Description="زوم کردن به مختصات تعیین شده"
                               Hint="زوم کردن به مختصات تعیین شده"
                               />

            <dxr:BarButtonGroup Name="bgGoto">
                <dxr:BarButtonGroup.ItemLinks>
                    <dxb:BarItemLink BarItemName="bGoto"/>
                    <dxb:BarItemLink BarItemName="bZoomTo"/>
                </dxr:BarButtonGroup.ItemLinks>
            </dxr:BarButtonGroup>

            <dxb:BarButtonItem Name="bZoomToFeature" Content="بزرگنمایی به عارضه"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/promotion.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/promotion.png"
                               Description="بزرگنمایی به عارضه انتخاب شده"
                               Hint="بزرگنمایی به عارضه انتخاب شده"
                               ItemClick="bZoomToFeature_ItemClick"
                               />

            <dxb:BarCheckItem  Name="bBingMap" Content="نمایش تصویر ماهواره ای"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/photo.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/photo.png"
                               Description="نمایش تصاویر ماهواره ای سرویس بینگ"
                               Hint="نمایش تصاویر ماهواره ای سرویس بینگ"
                               ItemClick="bBingMap_ItemClick"
                               IsChecked="True"
                               Visibility="Visible"
                               />

            <dxb:BarCheckItem  Name="bIdentifyMap" Content="شناسایی عوارض"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/info.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/info.png"
                               Description="شناسایی عارضه روی نقشه و نمایش اطلاعات"
                               Hint="شناسایی عارضه روی نقشه و نمایش اطلاعات"
                               CheckedChanged="bIdentifyMap_ItemClick"
                               />

            <dxb:BarCheckItem Name="bIdentifyImage" Content="شناسایی تصاویر"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/info_pic.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/info_pic.png"
                               Description="شناسایی روی عکس و نمایش اطلاعات"
                               Hint="شناسایی روی عکس و نمایش اطلاعات"
                               CheckedChanged="bIdentifyImage_ItemClick"
                               />

            <dxb:BarCheckItem Name="bPan" Content="جابجایی"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/pan.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/pan.png"
                               Description="جابجایی روی نقشه"
                               Hint="جابجایی روی نقشه"
                               CheckedChanged="bPan_ItemClick"
                               />

            <dxb:BarCheckItem Name="bSelect" Content="انتخاب عارضه"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               Description="انتخاب عوارض روی نقشه"
                               Hint="انتخاب عوارض روی نقشه"
                               CheckedChanged="bSelect_ItemClick"
                               />

            <dxb:BarCheckItem Name="bAddToSelect" Content="اضافه کردن به انتخاب فعلی"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               Description="اضافه کردن به انتخاب فعلی"
                               Hint="اضافه کردن به انتخاب فعلی"
                               CheckedChanged="bAddToSelect_ItemClick"
                               />

            <dxb:BarCheckItem Name="bRemoveFromSelect" Content="حذف از انتخاب فعلی"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                               Description="حذف از انتخاب فعلی"
                               Hint="حذف از انتخاب فعلی"
                               CheckedChanged="bRemoveFromSelect_ItemClick"
                               />

            <dxb:BarButtonItem Name="bClearSelection" Content="حذف انتخاب ها"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/delete_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/delete_item.png"
                               Description="حذف انتخاب ها روی نقشه"
                               Hint="حذف انتخاب ها روی نقشه"
                               ItemClick="bClearSelection_ItemClick"
                               />

            <dxb:BarSplitCheckItem Name="sbModes" Content="حالات انتخاب" 
                                    Glyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png"
                                    LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/accept_item.png" 
                                    Description="حالات مختلف انتخاب"
                                    Hint="حالات مختلف انتخاب"
                                   CheckedChanged="sbModes_CheckedChanged">
                <dxb:BarSplitButtonItem.PopupControl>
                    <dxb:PopupMenuInfo>
                        <dxb:PopupMenuInfo.ItemLinks>
                            <dxb:BarItemLink BarItemName="bSelect" RibbonStyle="SmallWithText" />
                            <dxb:BarItemLink BarItemName="bAddToSelect" RibbonStyle="SmallWithText" />
                            <dxb:BarItemLink BarItemName="bRemoveFromSelect" RibbonStyle="SmallWithText" />
                        </dxb:PopupMenuInfo.ItemLinks>
                    </dxb:PopupMenuInfo>
                </dxb:BarSplitButtonItem.PopupControl>
            </dxb:BarSplitCheckItem>

            <dxb:BarButtonItem Name="bMeasDist" Content="اندازه گیری فاصله"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/chart.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/chart.png"
                               Description="اندازه گیری فاصله روی نقشه"
                               Hint="اندازه گیری فاصله روی نقشه"
                               />

            <dxb:BarButtonItem Name="bMeasArea" Content="اندازه گیری مساحت"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/calculator.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/calculator.png"
                               Description="اندازه گیری مساحت روی نقشه"
                               Hint="اندازه گیری مساحت روی نقشه"
                               />
            
            <dxb:BarCheckItem Name="bMeasure" Content="انجام اندازه گیری"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/calculator.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/calculator.png"
                               Description="اندازه گیری مساحت روی نقشه"
                               Hint="اندازه گیری مساحت روی نقشه"
                               CheckedChanged="bMeasure_ItemClick"
                               />

            <dxb:BarButtonItem Name="bAddDraw" Content="افزودن ترسیم"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/add_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/add_item.png"
                               Description="افزودن ترسیم انجام شده به نقشه"
                               Hint="افزودن ترسیم انجام شده به نقشه"
                               ItemClick="bIdentifyImage_ItemClick"
                               />

            <dxb:BarCheckItem  Name="bEraseDraw" Content="حذف ترسیم"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/remove_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/remove_item.png"
                               Description="حذف ترسیم انجام شده از نقشه"
                               Hint="حذف ترسیم انجام شده از نقشه"
                               CheckedChanged="bEraseDraw_CheckedChanged"
                               />

            <dxb:BarButtonItem Name="bClearAll" Content="حذف همه"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/delete_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/delete_item.png"
                               Description="حذف تمام ترسیم های انجام شده"
                               Hint="حذف تمام ترسیم های انجام شده"
                               ItemClick="bClearAll_ItemClick"
                               />

            <dxb:BarEditItem Name="eTotalDistance" EditWidth="80" Content="طول کل . . . . . . . . . . ." Hint="طول مسافت کلی" IsReadOnly="True">
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarEditItem Name="eLastSegment" EditWidth="80" Content="طول قطعه آخر . . . . . . . " Hint="طول قطعه آخر" IsReadOnly="True">
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarEditItem Name="eMeasUnit" EditWidth="80" Content="واحد اندازه گیری طول" Hint="واحد اندازه گیری طول">
                <dxb:BarEditItem.EditSettings>
                    <dxe:ComboBoxEditSettings PopupMaxHeight="80" IsTextEditable="False"/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>

            <dxb:BarCheckItem Name="bDrawPoint" Content="ترسیم نقطه"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               Description="ترسیم نقطه روی نقشه"
                               Hint="ترسیم نقطه روی نقشه"
                              CheckedChanged="bDrawPoint_CheckedChanged"/>

            <dxb:BarCheckItem Name="bDrawLine" Content="ترسیم خط"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               Description="ترسیم خط روی نقشه"
                               Hint="ترسیم خط روی نقشه"
                              CheckedChanged="bDrawLine_CheckedChanged"
                               />

            <dxb:BarCheckItem Name="bDrawPolygon" Content="ترسیم پلیگون"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/edit_item.png"
                               Description="ترسیم پلیگون روی نقشه"
                               Hint="ترسیم پلیگون روی نقشه"
                              CheckedChanged="bDrawPolygon_CheckedChanged"
                               />

            <dxb:BarButtonItem Name="bPrint" Content="پرینت"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/printer.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/printer.png"
                               Description="گرفتن پرینت از نقشه یا عکس"
                               Hint="گرفتن پرینت از نقشه یا عکس"
                               ItemClick="bPrint_ItemClick"
                               />

            <dxb:BarButtonItem Name="bShowLayers" Content="نمایش آنی نقشه کاربر"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/layers.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/layers.png"
                               Description="نمایش آنی نقشه کاربر"
                               Hint="نمایش آنی نقشه کاربر"
                               ItemClick="bShowLayers_ItemClick"
                               />
							   
			<dxb:BarButtonItem Name="bUploadData" Content="آپلود، ذخیره و نمایش داده"
                               Glyph="../Pictures/Icon32/email_send.png"
                               LargeGlyph="../Pictures/Icon32/email_send.png"
                               Description="آپلود، ذخیره و نمایش داده"
                               Hint="آپلود، ذخیره و نمایش داده"
                               ItemClick="bUploadData_ItemClick"
                               />
							   
			<dxb:BarButtonItem Name="bViewData" Content="جستجوی اسناد"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/note_accept.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/note_accept.png"
                               Description="جستجوی اسناد"
                               Hint="جستجوی اسناد"
                               ItemClick="bViewData_ItemClick"
                               />
							   
			<dxb:BarButtonItem Name="bViewReport" Content="مشاهده آرشیو اسناد"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/chart.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/chart.png"
                               Description="مشاهده آرشیو اسناد"
                               Hint="مشاهده آرشیو اسناد"
                               ItemClick="bViewReport_ItemClick"
                               />

            <dxb:BarButtonItem Name="bAttachment" Content="تعریف پیوند"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/attachment.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/attachment.png"
                               Description="تعریف پیوند برای نقاط جغرافیایی"
                               Hint="تعریف پیوند برای نقاط جغرافیایی"
                               ItemClick="bAttachment_ItemClick"
                               />

            <dxb:BarCheckItem  Name="cShowLabels" Content="(عدم)نمایش لیبل ها"
                               Glyph="/LanSysWebGIS;component/Pictures/Icon32/comment_bubble.png"
                               LargeGlyph="/LanSysWebGIS;component/Pictures/Icon32/comment_bubble.png"
                               Description="تعریف پیوند برای نقاط جغرافیایی"
                               Hint="تعریف پیوند برای نقاط جغرافیایی"
                               CheckedChanged="cShowLabels_ItemClick"
                               />
            
            <!--region #Satellite Imagary-->
            <dxr:RibbonGalleryBarItem Name="gSatImages" DropDownGalleryInit="OnThemeDropDownGalleryInit">
                <dxr:RibbonGalleryBarItem.Gallery>
                    <dxb:Gallery MinColCount="1" ColCount="4" RowCount="2" ItemCheckMode="Single" AllowHoverAnimation="True" AllowHoverImages="True" 
                                 FilterCaption="Themes" IsItemCaptionVisible="True" 
                                 ItemCaptionHorizontalAlignment="Center" HoverGlyphSize="96,96" ItemClick="OnThemeItemClick">
                        <dxb:Gallery.Groups>
                            <dxb:GalleryItemGroup Caption="Image Set 1">
                                <dxb:GalleryItem Caption="Image 1" Tag="Image1" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 2" Tag="Image2" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 3" Tag="Image3" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 4" Tag="Image4" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                            </dxb:GalleryItemGroup>
                            <dxb:GalleryItemGroup Caption="Image Set 2">
                                <dxb:GalleryItem Caption="Image 5" Tag="Image5" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 6" Tag="Image6" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 7" Tag="Image7" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                                <dxb:GalleryItem Caption="Image 8" Tag="Image8" Glyph="/LanSysWebGIS;component/Pictures/Icon/AlignJustify_32x32.png"/>
                            </dxb:GalleryItemGroup>
                        </dxb:Gallery.Groups>
                    </dxb:Gallery>
                </dxr:RibbonGalleryBarItem.Gallery>
            </dxr:RibbonGalleryBarItem>
