<controls:ChildWindow x:Class="LanSysWebGIS.UserControls.Banader.EditWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="100" FlowDirection="RightToLeft" FontFamily="/LanSysWebGIS;component/Font/BYekan.ttf#B Yekan" 
           Title="ویرایش" KeyDown="ChildWindow_KeyDown">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Name="value"/>
        <Button x:Name="OKButton" Content="تایید" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="CancelButton" Content="انصراف" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,80,0" Grid.Row="1"/>
    </Grid>
</controls:ChildWindow>