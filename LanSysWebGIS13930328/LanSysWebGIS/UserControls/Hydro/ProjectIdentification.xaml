<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="LanSysWebGIS.UserControls.Hydro.ProjectIdentification"
    xmlns:my="clr-namespace:SilverlightPersianDatePicker.Views;assembly=SilverlightPersianDatePicker"
    mc:Ignorable="d" FontFamily="/LanSysWebGIS;component/Font/BYekan.ttf#B Yekan"
    FlowDirection="RightToLeft" Width="800" Height="425">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5,10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="#FF050078"/>
            <!--<Setter Property="FontWeight" Value="Bold"/>-->
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="3,10"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="5,10"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="3" Background="SkyBlue" Margin="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="شناسنامۀ پروژه" FontWeight="Bold"  HorizontalAlignment="Center" FontSize="20" Margin="2" Foreground="White"/>
                <ComboBox Style="{StaticResource flatComboboxStyle}" MinWidth="100" Height="30" VerticalAlignment="Stretch" Margin="15,0,0,0"
                          SelectedIndex="0" Foreground="White" FontSize="17">
                    <ComboBoxItem>تست 1</ComboBoxItem>
                    <ComboBoxItem>تست 2</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
        </Border>
        <sdk:TabControl Grid.Row="1" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Stretch" 
                    RenderTransformOrigin="0,0" TabStripPlacement="Left" Style="{StaticResource TabControlStyle1}">
            <sdk:TabItem Header="مشخصات پروژه" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="نام پروژه"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="5" Text="{Binding CurrentItem.ProjectName, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="پیمانکار"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.PeymankarName, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="مشاور"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.MoshaverName, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="تاریخ شروع قرارداد"/>
                    <my:PDatePicker Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" SelectedPersianDate="{Binding CurrentItem.ContractStartDate, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="2" Grid.Column="3" Text="تاریخ پایان قرارداد"/>
                    <my:PDatePicker Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" SelectedPersianDate="{Binding CurrentItem.ContractFinishDate, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="مدت قرارداد(روز)"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.ContractPeriod, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="3" Grid.Column="3" Text="مبلغ قرارداد(تومان)"/>
                    <TextBox Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.ContractCost, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="هدف از اجرای پروژه"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" AcceptsReturn="True" Height="60" MaxHeight="60" Text="{Binding CurrentItem.ProjectPurpose, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="مشخصات فنی پروژه"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="5" AcceptsReturn="True" Height="60" MaxHeight="60" Text="{Binding CurrentItem.ProjectTechSpec, Mode=TwoWay}"/>
                </Grid>
            </sdk:TabItem>
            
            <sdk:TabItem Header="مشخصات کلی لایروبی" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="نوع لایروبی"/>
                    <CheckBox Content="احداثی" Grid.Column="1" IsChecked="{Binding CurrentItem.IsEhdasi, Mode=TwoWay}"/>
                    <CheckBox Content="نگهداری" Grid.Column="2" IsChecked="{Binding CurrentItem.IsNegahdari, Mode=TwoWay}"/>
                    <CheckBox Content="تعمیقی" Grid.Column="3" IsChecked="{Binding CurrentItem.IsTamighi, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="1" Text="حجم لایروبی(متر مکعب)"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.HajmeLayroobi, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="2" Text="محدودۀ لایروبی"/>
                    <CheckBox Grid.Row="2" Grid.Column="1" Content="حوضچه آرامش"
                                 IsChecked="{Binding CurrentItem.IsHozcheAramesh, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="2" Grid.Column="2" Content="کانال دسترسی"
                                 IsChecked="{Binding CurrentItem.IsCanalDastrasi, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="2" Grid.Column="3" Content="پای اسکله"
                                 IsChecked="{Binding CurrentItem.IsPayeEskele, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="3" Text="وسعت محدوده لایروبی(متر مربع)"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.VosateMahdodeLayroobi, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="4" Text="نوع لایروب"/>
                    <CheckBox Grid.Row="4" Grid.Column="1" Content="کاترساکشن"
                                 IsChecked="{Binding CurrentItem.IsCutterSucktion, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="4" Grid.Column="2" Content="هایپرساکشن"
                                 IsChecked="{Binding CurrentItem.IsHyperSucktion, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="4" Grid.Column="3" Content="بیل و باروج"
                                 IsChecked="{Binding CurrentItem.IsBiloBarooj, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="5" Text="نوع تخلیه مصالح حاصل از لایروبی"/>
                    <CheckBox Grid.Row="5" Grid.Column="1" Content="پمپ"
                                 IsChecked="{Binding CurrentItem.IsPomp, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="5" Grid.Column="2" Content="در بارج جانبی"
                                 IsChecked="{Binding CurrentItem.IsDarBarejJanebi, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="5" Grid.Column="3" Content="مخزن"
                                 IsChecked="{Binding CurrentItem.IsMakhzan, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="6" Text="نوع شناور طرح"/>
                    <CheckBox Grid.Row="6" Grid.Column="1" Content="کالای عمومی"
                                 IsChecked="{Binding CurrentItem.IsKalayeOmomi, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="6" Grid.Column="2" Content="نفتی"
                                 IsChecked="{Binding CurrentItem.IsNafti, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="6" Grid.Column="3" Content="کانتینری"
                                 IsChecked="{Binding CurrentItem.IsContineri, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="6" Grid.Column="4" Content="فله بر"
                                 IsChecked="{Binding CurrentItem.IsFallebar, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="6" Grid.Column="5" Content="مسافری"
                                 IsChecked="{Binding CurrentItem.IsMosaferi, Mode=TwoWay}"/>
                    <CheckBox Grid.Row="6" Grid.Column="6" Content="لنج"
                                 IsChecked="{Binding CurrentItem.IsLenj, Mode=TwoWay}"/>

                    <TextBlock Grid.Row="7" Text="ظرفیت شناور طرح(DWT)"/>
                    <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.ZarfiateShenavareTarh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="2" Text="عمق آبخور شناور طرح(متر)"/>
                    <TextBox Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="2" Text="{Binding CurrentItem.OmgheAbkhorShenavareTarh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="8" Text="تراز بستر دریا پس از لایروبی نسبت به تراز C.D."/>
                    <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.NesbateTarazeCD, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="2" Text="نسبت به تراز M.L.L.W."/>
                    <TextBox Grid.Row="8" Grid.Column="5" Grid.ColumnSpan="2" Text="{Binding CurrentItem.NesbateTarazBeMLLW, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                </Grid>
            </sdk:TabItem>
            
            <sdk:TabItem Header="مشخصات لایروب کاترساکشن" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="نام لایروب"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding CurrentItem.cutNameLayroob, Mode=TwoWay}"/>
                    <TextBlock Text="تحت مالکیت" Grid.Column="2"/>
                    <TextBox Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding CurrentItem.cutLayroobMalek, Mode=TwoWay}"/>
                    <TextBlock Text="آبخور لایروب" Grid.Column="4"/>
                    <TextBox Grid.Column="5" Grid.ColumnSpan="1" Text="{Binding CurrentItem.cutAbkhorLayroob, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="حداکثر عمق لایروبی(متر)"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.cutMaxOmgh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="حداقل عمق لایروبی(متر)"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.cutMinOmgh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="قدرت کاتر(اسب بخار)"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.cutGhodrateCutter, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="قدرت پمپ(اسب بخار)"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.cutGhodratePomp, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Text="متوسط مصرف سوخت بازای انجام یک متر مکعب لای برداری(لیتر)"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding CurrentItem.cutMasrafSookht, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="مهار لایروب توسط چند اسپاد مهاربندی صورت می گیرد"/>
                    <TextBox Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding CurrentItem.cutMaharSpad, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="در صورت عدم وجود اسپاد مهار لایروب توسط "/>
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="3">
                        <TextBox Text="{Binding CurrentItem.cutMaharLangarCount, Mode=TwoWay}" Width="70" MinWidth="70" TextChanged="TextBox_TextChanged_1"/>
                        <TextBlock Text="لنگر "/>
                        <TextBox Text="{Binding CurrentItem.cutMaharLangarWeight, Mode=TwoWay}" Width="70" MinWidth="70" TextChanged="TextBox_TextChanged_1"/>
                        <TextBlock Text="تنی استقرار انجام می پذیرد "/>
                    </StackPanel>
                </Grid>
            </sdk:TabItem>
            
            <sdk:TabItem Header="مشخصات لایروب هایپرساکشن" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="نام لایروب"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypNameLayroob, Mode=TwoWay}"/>
                    <TextBlock Text="تحت مالکیت" Grid.Column="3"/>
                    <TextBox Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypLayroobMalek, Mode=TwoWay}"/>
                    
                    <TextBlock Text="آبخور لایروب" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypAbkhorLayroob, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="حداکثر عمق لایروبی(متر)"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypMaxOmgh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Text="حجم مخزن لایروب(مترمکعب)" Grid.Column="0" Grid.Row="2"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypHajmeMakhzan, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="متوسط مصرف سوخت بازای 1 متر لای برداری(لیتر)"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.hypMasrafSookht, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                </Grid>
            </sdk:TabItem>
            <sdk:TabItem Header="مشخصات لایروب بیل و بارج" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="نام لایروب"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilNameLayroob, Mode=TwoWay}"/>
                    <TextBlock Text="تحت مالکیت" Grid.Column="3"/>
                    <TextBox Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilLayroobMalek, Mode=TwoWay}"/>

                    <TextBlock Text="آبخور لایروب" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilAbkhorBarj, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="حجم باکت(مترمکعب)"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilHajmeBucket, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="متوسط حجم مصالح در باکت بازای هر بار لای برداری (مترمکعب)"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilHajmeMasaleh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Text="حداکثر عمق لایروبی(متر)" Grid.Column="0" Grid.Row="3"/>
                    <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilMaxOmgh, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="با حجم باکت(مترمکعب)"/>
                    <TextBox Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilMaxHajmeBucket, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Text="متوسط مصرف سوخت بازای انجام یک متر لای برداری (لیتر)"/>
                    <TextBox Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.bilMaxHajmeBucket, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                </Grid>
            </sdk:TabItem>

            <sdk:TabItem Header="تجهیزات جانبی - یدک کش" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="کاربری"/>
                    <CheckBox Content="یدک کشی" Grid.Column="1" IsChecked="{Binding CurrentItem.IsYadakKeshi, Mode=TwoWay}"/>
                    <CheckBox Content="نقشه برداری" Grid.Column="2" IsChecked="{Binding CurrentItem.IsNaghshebardari, Mode=TwoWay}"/>
                    <CheckBox Content="بارج کشی" Grid.Column="3" IsChecked="{Binding CurrentItem.IsBarjKeshi, Mode=TwoWay}"/>

                    <TextBlock Text="قدرت موتور(اسب بخار)" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadGhodratMotor, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="کشش مهاربند(تن)"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadKesheshMaharband, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Text="طول یدک کش(متر)" Grid.Column="0" Grid.Row="2"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadTool, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="عرض یدک کش(متر)"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadArz, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="آبخور یدک کش(متر)"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadAbkhor, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Text="حجم مخزن سوخت(مترمکعب)" Grid.Column="0" Grid.Row="4"/>
                    <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadHajmeMakhzanSookht, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="4" Grid.Column="3" Text="حجم مخزن آب(مترمکعب)"/>
                    <TextBox Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.yadHajmeMakhzanAb, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                </Grid>
            </sdk:TabItem>

            <sdk:TabItem Header="تجهیزات جانبی - مولتی کت" Style="{StaticResource TabItemStyle1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="جرثقیل هیدرولیکی کوچک(متر)" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding CurrentItem.mulJaresaghil, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="قدرت وینچ(تن)"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.mulWinch, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <TextBlock Text="حجم مخزن سوخت(مترمکعب)" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding CurrentItem.mulHajmeMakhzanSookht, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="حجم مخزن آب(مترمکعب)"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding CurrentItem.mulHajmeMakhzanAb, Mode=TwoWay}" TextChanged="TextBox_TextChanged_1"/>

                    <CheckBox Content="توانایی جابجا کردن لنگر مهاربند لایروب کاترساکشن را دارد" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" IsChecked="{Binding CurrentItem.IsTavaneJabejaei, Mode=TwoWay}"/>

                    <CheckBox Content="جهت اسمبل کردن خط لوله دریایی به کار گرفته می شود" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" IsChecked="{Binding CurrentItem.IsJahateAssemble, Mode=TwoWay}"/>

